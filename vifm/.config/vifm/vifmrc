" MD5 {{{
filetype *.md5
       \ {Check MD5 hash sum} md5sum -c %f %S
" }}}

" Hashes {{{
filetype *.b2     {Verify} b2sum     -c %f %S
filetype *.md5    {Verify} md5sum    -c %f %S
filetype *.sha1   {Verify} sha1sum   -c %f %S
filetype *.sha256 {Verify} sha256sum -c %f %S
filetype *.sha384 {Verify} sha384sum -c %f %S
filetype *.sha512 {Verify} sha512sum -c %f %S
filetype *.sha1   {Check SHA1 hash sum} sha1sum -c %f %S
" }}}

" SHA256 {{{
filetype *.sha256
       \ {Check SHA256 hash sum} sha256sum -c %f %S
" }}}

" SHA512 {{{
filetype *.sha512
       \ {Check SHA512 hash sum} sha512sum -c %f %S
" }}}

" GPG signature {{{
filetype {*.asc},<application/pgp-signature>
       \ {Check signature} !!gpg --verify %c
filetype *.asc,*.sig {Verify} gpg --verify %c
fileviewer *.gpg gpg --decrypt %c
" }}}

" Torrents {{{
filetype {*.torrent},<application/x-bittorrent> ktorrent %f &
fileviewer {*.torrent},<application/x-bittorrent> dumptorrent -v %c
filetype *.torrent {Aria2} aria2c %f &
fileviewer *.torrent dumptorrent -v %c
filextype *.torrent {qBittorrent} qbittorent %f %i &
" }}}

" Archives {{{
filetype *.asar {Extract} asar e %f %f:r
fileviewer *.asar asar l %c

filetype *.rar,*.cbr {Extract} unrar %f
fileviewer *.rar,*.cbr unrar v %c

filetype *.rpa {Extract} unrpa -s %f
fileviewer *.rpa unrpa -l %c
fileviewer *.7z,*.cb7 7z l %c

filetype *.tar.br {Extract} tar --force-local -I brotli -xf %f
fileviewer *.tar.br,*.tbr tar --force-local -I brotli -tf %c

filetype
       \*.apkg,
       \*.ear,
       \*.jar,
       \*.oxt,
       \*.war,
       \*.zip,
       \*.pkg.tar,
       \*.tar,
       \*.tar.bz2,
       \*.tar.gz,
       \*.tar.xz,
       \*.tar.zst,
       \*.tbz2,
       \*.tgz,
       \*.txz,
       \*.tzst,
       \<application/zip>,
       \<application/java-archive>,
       \<application/x-tar>
       \ {Open with vim} nvim %f

fileviewer {*.apk,*.cbz,*.ear,*.jar,*.oxt,*.war,*.zip} zip -sf %c
fileviewer *.tgz,*.tar.gz                              tar --force-local -tzf %c
fileviewer *.tar.bz2,*.tbz2                            tar --force-local -tjf %c
fileviewer *.tar.xz,*.txz                              tar --force-local -tJf %c
fileviewer *.tar.zst,*.tzst                            tar --force-local -t --zstd -f %c
fileviewer {*.tar},<application/x-tar>                 tar --force-local -tf %c

filextype
        \*.7z,
        \*.apk,
        \*.cb7,
        \*.cbr,
        \*.cbz,
        \*.deb,
        \*.ear,
        \*.jar,
        \*.oxt,
        \*.rar,
        \*.rpm,
        \*.tar,
        \*.tar.br,
        \*.tar.bz2,
        \*.tar.gz,
        \*.tar.xz,
        \*.tar.zst,
        \*.tbz2,
        \*.tgz,
        \*.txz
        \*.war,
        \*.zip
        \ {View using Ark} ark %f %i &,
        \ {MComix} mcomix %f %i &,
        \ {Zathura} zathura %f %i &
" }}}

" Rar2FsMount and rar archives {{{
filetype {*.rar},<application/x-rar>
       \ {Mount with rar2fs}
       \ FUSE_MOUNT|rar2fs %SOURCE_FILE %DESTINATION_DIR
fileviewer {*.rar},<application/x-rar> unrar v %c
" }}}

" IsoMount {{{
filetype {*.iso},<application/x-iso9660-image>
       \ {Mount with fuseiso}
       \ FUSE_MOUNT|fuseiso %SOURCE_FILE %DESTINATION_DIR
" }}}

" SshMount {{{
filetype *.ssh
       \ {Mount with sshfs}
       \ FUSE_MOUNT2|sshfs %PARAM %DESTINATION_DIR %FOREGROUND
" }}}

" FtpMount {{{
filetype *.ftp
       \ {Mount with curlftpfs}
       \ FUSE_MOUNT2|curlftpfs -o ftp_port=-,,disable_eprt %PARAM %DESTINATION_DIR %FOREGROUND
" }}}

" Fuse7z and 7z archives {{{
filetype {*.7z},<application/x-7z-compressed>
       \ {Mount with fuse-7z}
       \ FUSE_MOUNT|fuse-7z %SOURCE_FILE %DESTINATION_DIR
fileviewer {*.7z},<application/x-7z-compressed> 7z l %c
" }}}

