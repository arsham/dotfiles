       \*.wma,
       \*.xspf,
       \<audio/*>
       \ {Play using MPV} mpv %f &,
       \ {Play using ffplay} ffplay -nodisp -hide_banner -autoexit %c,
       \ {Play using MPlayer} mplayer %f

fileviewer
         \*.aac,
         \*.au,
         \*.axa,
         \*.flac,
         \*.mid,
         \*.midi,
         \*.mka,
         \*.mp3,
         \*.mpc,
